<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dawid.flickr_wallpapers.MainActivity"
    android:background="@color/backgroundGrey">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/text_color"
        android:visibility="gone"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_margin="7dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@mipmap/ic_search_black_24dp"
            android:background="@drawable/search_shape"
            android:hint="@string/search"
            android:id="@+id/editText"
            android:maxLines="1"
            android:drawablePadding="15dp"/>
    </android.support.v7.widget.CardView>
<FrameLayout
    android:layout_below="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">
</FrameLayout>
<android.support.design.widget.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/bottom_navigation"
    android:background="@drawable/menu_gradient"
    app:itemIconTint="@drawable/icons_colors"
    app:itemTextColor="@drawable/icons_colors"
    android:id="@+id/bottomNavigation">
</android.support.design.widget.BottomNavigationView>
</RelativeLayout>
